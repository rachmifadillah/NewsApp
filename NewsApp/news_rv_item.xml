<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/bole"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/idTVNews"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/TVNewsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVNews"
            android:layout_margin="4dp"
            android:maxLines="2"
            android:padding="4dp"
            android:text="New Heading"
            android:textColor="@color/orange_crayola"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Heading"
            android:layout_below="@id/TVNewsHeading"
            android:textColor="@color/orange_crayola"
            android:maxLines="3"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:id="@+id/idTVSubHeading"/>


    </RelativeLayout>
        
</androidx.cardview.widget.CardView>